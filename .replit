modules = ["nodejs-20", "web", "postgresql-16"]
run = "cd frontend && npm run dev"
hidden = [".config", ".git", "generated-icon.png", "frontend/node_modules", "frontend/dist"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[deployment]
deploymentTarget = "static"
build = ["cd", "frontend", "&&", "npm", "run", "build"]
publicDir = "frontend/dist/public"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev:client"
waitForPort = 5000

[agent]
stack = "MOCKUP_JS"
mockupState = "MOCKUP"
